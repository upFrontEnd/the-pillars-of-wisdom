root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Tabs partout
indent_style = tab
tab_width = 2

[*.md]
trim_trailing_whitespace = false

# Makefile exige des tabs (on le laisse explicite)
[Makefile]
indent_style = tab
